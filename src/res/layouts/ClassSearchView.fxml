<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" maxHeight="650.0" maxWidth="850.0" minHeight="650.0" minWidth="850.0" prefHeight="650.0"
      prefWidth="850.0" spacing="12.0" stylesheets="@../css/Material_Style_CSS.css"
      xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="Controllers.ClassSearchController">
    <children>
        <TableView fx:id="classSearchTable" maxHeight="550.0" minHeight="550.0" prefHeight="550.0"
                   tableMenuButtonVisible="true">
            <columns>
                <TableColumn fx:id="titleColumn" maxWidth="141.66" minWidth="141.66" prefWidth="141.66" text="Title"/>
                <TableColumn fx:id="classCodeColumn" maxWidth="141.66" minWidth="141.66" prefWidth="141.66"
                             text="Class Code"/>
                <TableColumn fx:id="daysColumn" maxWidth="141.66" minWidth="141.66" prefWidth="141.66" text="Days"/>
                <TableColumn fx:id="startTimeColumn" maxWidth="141.66" minWidth="141.66" prefWidth="141.66"
                             text="Start"/>
                <TableColumn fx:id="endTimeColumn" maxWidth="141.66" minWidth="141.66" prefWidth="141.66" text="End"/>
                <TableColumn fx:id="unitsColumn" maxWidth="141.66" minWidth="141.66" prefWidth="141.66" text="Units"/>
            </columns>
        </TableView>
        <Button fx:id="addCourseButton" onAction="#addCourseToStudent" styleClass="button-teal" text="Add Course"/>
        <Label fx:id="errorMessageLabel" textFill="#f44336" visible="false"/>
    </children>
</VBox>
